<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Switch">
        <attr name="checked" format="reference|boolean"/>
        <attr name="switchOnColor" format="reference|color"/>
        <attr name="switchOffColor" format="reference|color"/>
        <attr name="spotOnColor" format="reference|color"/>
        <attr name="spotOnColorIn" format="reference|color"/>
        <attr name="spotOffColor" format="reference|color"/>
        <attr name="spotOffColorIn" format="reference|color"/>
        <attr name="switchOnStrokeColor" format="reference|color"/>
        <attr name="switchOffStrokeColor" format="reference|color"/>
        <attr name="spotPadding" format="reference|dimension"/>
        <attr name="duration" format="reference|integer" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
    <declare-styleable name="DiagonalView">
        <attr name="angle" format="integer" />
        <attr name="diagonalGravity" format="integer">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="bottom" value="4" />
            <flag name="top" value="8" />
        </attr>
        <attr name="horizontalShift" format="dimension" />
    </declare-styleable>

    <attr name="src" format="reference" />
    <attr name="cutType" format="enum">
        <enum name="linePositive" value="0" />
        <enum name="lineNegative" value="1" />
        <enum name="arc" value="2" />
        <enum name="wave" value="3" />
    </attr>
    <attr name="cutHeight" format="dimension" />
    <attr name="cutCount" format="integer" />

    <attr name="autoTint" format="boolean" />
    <attr name="tintColor" format="color" />
    <attr name="tintAlpha" format="integer" />

    <attr name="titleText" format="string" />
    <attr name="titleTextColor" format="color" />
    <attr name="titleTextSize" format="dimension" />
    <attr name="subTitleText" format="string" />
    <attr name="subTitleTextColor" format="color" />
    <attr name="subTitleTextSize" format="dimension" />
    <attr name="textMargin" format="dimension" />
    <attr name="lineSpacing" format="dimension" />

    <attr name="openFactor" format="float"/>


    <declare-styleable name="GlazyImageView">

        <attr name="src" />

        <attr name="cutType" />
        <attr name="cutHeight" />
        <attr name="cutCount" />

        <attr name="autoTint" />
        <attr name="tintColor" />
        <attr name="tintAlpha" />

        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
        <attr name="subTitleText" />
        <attr name="subTitleTextColor" />
        <attr name="subTitleTextSize" />
        <attr name="textMargin" />
        <attr name="lineSpacing" />

        <attr name="openFactor" />

    </declare-styleable>



    <declare-styleable name="GlazyViewPager">

    </declare-styleable>


</resources>