<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/form_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/user_info"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            style="@style/alegriaLabel"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:textColorHint="#ffffff"
            android:id="@+id/name_layout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.40"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="true"
                android:hint="Name"
                android:textColor="#ffffff"
                android:inputType="textEmailAddress"
                android:textAlignment="textStart" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/alegriaLabel"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:textColorHint="#ffffff"
            android:id="@+id/email_layout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.40"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="true"
                android:hint="Email"
                android:textColor="#ffffff"
                android:inputType="textEmailAddress"
                android:textAlignment="textStart" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/alegriaLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:layout_margin="16dp"
            android:textColorHint="#ffffff"
            android:id="@+id/phone_layout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/college_spinner"
                android:layout_alignParentStart="true"
                android:alpha="0.40"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="true"
                android:hint="Phone Number"
                android:textColor="#ffffff"
                android:inputType="phone"
                android:shadowColor="@color/black"
                android:textAlignment="textStart" />
        </android.support.design.widget.TextInputLayout>

        <org.angmarch.views.NiceSpinner
            android:layout_margin="8dp"
            android:id="@+id/college_category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:textColor="#ffffff"
            android:backgroundTint="#00ffffff"
            android:textColorHighlight="#00ffffff"
            android:hint="Choose your Stream"
            android:textColorHint="#ffffff"/>

        <org.angmarch.views.NiceSpinner
            android:layout_margin="8dp"
            android:id="@+id/college_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:backgroundTint="#00ffffff"
            android:textColorHighlight="#00ffffff"
            android:hint="Choose your college."
            android:textColorHint="#ffffff"/>

    </LinearLayout>

        <Button
            android:id="@+id/info_proceed"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="32dp"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/round_rect_notify"
            android:backgroundTint="@color/blue_form"
            android:textColor="@color/white"
            android:text="Proceed" />




</RelativeLayout>