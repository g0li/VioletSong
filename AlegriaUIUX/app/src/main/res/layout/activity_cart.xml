<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="forevtechnologies.alegriauiux.CartActivity">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="forevtechnologies.alegriauiux.CartActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/reg_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TotalPrice :"
        android:textSize="20dp"
        android:gravity="left"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:paddingBottom="6dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/reg_events"
        android:paddingTop="6dp"/>
    <TextView
        android:id="@+id/price_display"
        android:layout_weight="3"
        android:layout_toRightOf="@id/totalPrice"
        android:layout_below="@id/reg_events"
        android:layout_above="@id/checkout"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="Rs. xoxo"
        android:textSize="20dp"
        android:paddingTop="6dp"
        android:paddingRight="7dp"
        android:layout_marginTop="7dp"
        android:textColor="#274a4a"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
</android.support.v4.widget.NestedScrollView>
</RelativeLayout>