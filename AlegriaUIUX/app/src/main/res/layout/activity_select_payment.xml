<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="forevtechnologies.alegriauiux.SelectPaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:id="@+id/OfflineCardView"
            app:cardElevation="20dp">

            <LinearLayout
                android:id="@+id/OfflineLin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/OfflineTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/comfortaa"
                    android:text="OFFline"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/OfflineTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pay to an Alegria volunteer"
                    android:textAlignment="viewStart"
                    android:textSize="18sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:id="@+id/OnlineCardView"
            app:cardElevation="20dp">

            <LinearLayout
                android:id="@+id/OnlineLin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/OnlineTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/comfortaa"
                    android:text="Online"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="true"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/OnlineTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Using Tech Support API"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="@android:color/holo_orange_dark"
        android:text="Go to Payment"
        android:textColor="#dcdcdc" />

</LinearLayout>